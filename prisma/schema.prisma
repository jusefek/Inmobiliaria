generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Auth Models (NextAuth.js Adapter) ---

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?    // Added for Credentials Provider
  role          UserRole  @default(CLIENT)
  accounts      Account[]
  sessions      Session[]
  
  // App Relations
  serviceRequests ServiceRequest[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- Application Domain Models ---

enum UserRole {
  CLIENT
  ADMIN
}

enum ServiceType {
  ANTI_SCAM_CHECK
  FULL_INVESTMENT_PLAN
}

enum ServiceStatus {
  PENDING_PAYMENT
  PAID
  IN_PROGRESS
  COMPLETED
}

model ServiceRequest {
  id              String        @id @default(cuid())
  userId          String
  user            User          @relation(fields: [userId], references: [id])
  type            ServiceType
  status          ServiceStatus @default(PENDING_PAYMENT)
  
  propertyUrl     String?       // Input from user form
  amountPaid      Decimal       @db.Decimal(10, 2)
  stripeSessionId String?
  
  report          PropertyReport?
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

enum Verdict {
  SAFE
  RISKY
  SCAM_LIKELY
}

enum ReformEstimate {
  LOW
  MEDIUM
  HIGH
}

model PropertyReport {
  id              String         @id @default(cuid())
  requestId       String         @unique
  request         ServiceRequest @relation(fields: [requestId], references: [id])
  
  verdict         Verdict
  estimatedValue  Decimal        @db.Decimal(10, 2)
  reformEstimate  ReformEstimate
  
  pdfUrl          String?
  adminNotes      String?        @db.Text
  
  createdAt       DateTime       @default(now())
}
